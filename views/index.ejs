<div class="white-row" id="sign-up">
    <div class="container">
        <h2>Get started creating your vehicle profile. It's cheap and easy.</h2>

        <div class="row">
            <div class="col-md-4 col-md-offset-1 well well-sm">
                <legend><i class="glyphicon glyphicon-stats" style="color: #3A89C9;"></i> Log in!</legend>
                <form action="/authenticate" method="post" class="form" role="form">
                    <input class="form-control" name="username" placeholder="Your Email" type="email" />
                    <input class="form-control" name="password" placeholder="Your Password" type="password" />
                    <br />
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Log in!</button>
                </form>
            </div>

            <div class="col-md-2">
                <h1 style="text-align: center;">OR</h1>
            </div>

            <div id="sign_up_form_area" class="col-md-4 well well-sm">
                <div id="errorTag" class="error"></div>
                <legend><i class="glyphicon glyphicon-send" style="color: #F26C4F"></i> Sign up!</legend>
                <form id="sign_up_form" action="#" method="post" class="form" role="form">
                    <div class="row">
                        <div class="col-xs-6 col-md-6">
                            <input id="sign_up_first_name" class="form-control" name="firstname" placeholder="First Name" type="text"
                                   required autofocus />
                        </div>
                        <div class="col-xs-6 col-md-6">
                            <input id="sign_up_last_name" class="form-control" name="lastname" placeholder="Last Name" type="text" required />
                        </div>
                    </div>
                    <input id="sign_up_email" class="form-control" name="youremail" placeholder="Your Email" type="email" />
                    <input id="sign_up_password" class="form-control" name="password" placeholder="Password" type="password" />
                    <input id="sign_up_re_password" class="form-control" name="password" placeholder="Re-enter Password" type="password" />
                    <label for="">
                        Birth Date</label>
                    <div class="row">
                        <div class="col-xs-12 col-md-12">
                            <input id="sign_up_birthday_date" class="form-control" name="date" placeholder="MM/DD/YYYY" type="text"
                                   required autofocus />
                        </div>

                    </div>
                    <label class="radio-inline">
                        <input type="radio" name="sex" id="inlineCheckbox1" value="male" />
                        Male
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="sex" id="inlineCheckbox2" value="female" />
                        Female
                    </label>
                    <br />
                    <br />
                    <button class="btn btn-lg btn-success btn-block" id="sign_up_btn" type="submit">Sign up!</button>
                </form>
            </div>
        </div>
    </div>
